<div class="box1">
    <div id="w">
    <header id="title">
      <h1>My Orders</h1>
    </header>
    <div id="page">
      <table class="cart">
        <thead>
		{{#if Orders.length}}
          <tr>
            <th class="first">&nbsp;</th>
            <th class="second">Product</th>
			<th>Price</th>
            <th class="third">Status</th>
            <th class="forth">&nbsp;</th>
          </tr>
        </thead>
		{{/if}}
        <tbody>
		{{#each Orders}}
          <tr class="productitm">
            <td><img class="resize" src="/Image/{{this.CoverImageID}}.png"></td> <!-- Not actually blob actually a file path -->
			<td>&nbsp;{{this.Name}}&nbsp;</td>
            <td>&nbsp;£{{this.Price}}&nbsp;</td>
            <td>&nbsp;{{this.OrderState}}&nbsp;</td>
			<td>
				<form action="/users/orderStatusUpdate" method="POST">
					<input name="ProductID" type="hidden" value="{{this.ListingID}}"></input>
					<input type="submit" value="{{this.ButtonValue}}">
				</form>
			</td>
		  </tr>	
		{{else}}
			<h3>No Orders</h3>
		{{/each}}
        </tbody>
      </table>
    </div>
	</div>
</div>

