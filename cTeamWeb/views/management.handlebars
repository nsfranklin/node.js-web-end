<div class="box4">
    <div id="w">
    <header id="title">
      <h1>My Orders</h1>
    </header>
    <div id="page">
      <table class="centred">
        <thead>
		{{#if Orders.length}}
          <tr>
            <th>&nbsp;&nbsp;</th>
            <th>Product&nbsp;&nbsp;</th>
			<th>Price&nbsp;&nbsp;</th>
            <th>Status&nbsp;&nbsp;</th>
            <th>&nbsp;&nbsp;</th>
          </tr>
        </thead>
		{{/if}}
        <tbody>
		{{#each Orders}}
          <tr>
            <td><img class="resize" src="/Image/{{this.CoverImageID}}.png"></td>
			<td>&nbsp;{{this.Name}}&nbsp;</td>
            <td>&nbsp;£{{this.Price}}&nbsp;</td>
            <td>&nbsp;{{this.OrderState}}&nbsp;</td>
			<td>
				<form action="/users/viewOrder" method="POST">
					<input name="ProductID" type="hidden" value="{{this.ListingID}}"></input>
					<input type="submit" value="View Order Details"></input>
				</form>
			</td>
			<td>
				<form action="/users/orderStatusUpdate" method="POST">
					<input name="ProductID" type="hidden" value="{{this.ListingID}}"></input>
					<input type="submit" {{{this.ButtonValue}}}></input>
				</form>
			</td>
		  </tr>	
		{{else}}
			<h3>No Orders</h3>
		{{/each}}
        </tbody>
      </table>
    </div>
	</div>
</div>

